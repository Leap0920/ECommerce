<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FreshMarket</title>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <!-- Icons (Phosphor Icons for modern look) -->
    @{ var phosphorUrl = "https://unpkg.com/@phosphor-icons/web"; }
    <script src="@phosphorUrl"></script>
    
    <!-- AOS (Animate On Scroll) Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body>
    <!-- Modern Navbar -->
    <nav class="navbar">
        <div class="container nav-container">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="nav-logo">
                <i class="ph-fill ph-plant"></i>
                <span>FreshMarket</span>
            </a>

            <!-- Navigation Links -->
            <ul class="nav-links">
                <li><a href="@Url.Action("Index", "Home")" class="nav-link vue-nav-link @(ViewBag.Title == "Home Page" ? "active" : "")" data-vue-btn="nav-home">Home</a></li>
                <li><a href="@Url.Action("Index", "Home")#products" class="nav-link vue-nav-link" data-vue-btn="nav-shop">Shop</a></li>
                <li><a href="@Url.Action("About", "Home")" class="nav-link vue-nav-link" data-vue-btn="nav-about">About</a></li>
            </ul>

            <!-- Actions -->
            <div class="nav-actions">
                <a href="@Url.Action("Index", "Cart")" class="icon-btn vue-icon-btn" style="position: relative;" data-vue-btn="nav-cart">
                    <i class="ph ph-shopping-cart" style="font-size: 1.25rem;"></i>
                    <span id="cart-badge" class="badge" style="display: none;">0</span>
                </a>

                <a href="@Url.Action("SignIn", "Regis")" class="btn btn-outline vue-btn vue-nav-btn" style="font-size: 0.875rem;" data-vue-btn="nav-signin">Sign In</a>
                <a href="@Url.Action("Register", "Regis")" class="btn btn-primary vue-btn vue-nav-btn" style="font-size: 0.875rem;" data-vue-btn="nav-register">Register</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer style="background: linear-gradient(180deg, var(--bg-alt) 0%, #ffffff 100%); border-top: 1px solid var(--border); padding: 3rem 0; margin-top: 4rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: var(--gradient-primary);"></div>
        <div class="container">
            <div class="footer-grid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; margin-bottom: 2rem;">
                <div data-aos="fade-up" data-aos-delay="0">
                    <h4 style="margin-bottom: 1rem; background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">FreshMarket</h4>
                    <p style="font-size: 0.875rem; color: var(--text-muted);">Your daily source for fresh, organic produce delivered right to your doorstep.</p>
                </div>
                <div data-aos="fade-up" data-aos-delay="100">
                    <h5 style="margin-bottom: 1rem; font-size: 1rem; color: var(--text-main);">Shop</h5>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted); text-decoration: none; transition: color 0.2s;">Vegetables</a>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted); text-decoration: none; transition: color 0.2s;">Fruits</a>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted); text-decoration: none; transition: color 0.2s;">Bundles</a>
                </div>
                <div data-aos="fade-up" data-aos-delay="200">
                    <h5 style="margin-bottom: 1rem; font-size: 1rem; color: var(--text-main);">Company</h5>
                    <a href="@Url.Action("About", "Home")" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted); text-decoration: none; transition: color 0.2s;">About</a>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted); text-decoration: none; transition: color 0.2s;">Contact</a>
                </div>
                <div data-aos="fade-up" data-aos-delay="300">
                    <h5 style="margin-bottom: 1rem; font-size: 1rem; color: var(--text-main);">Newsletter</h5>
                    <p style="font-size: 0.875rem; margin-bottom: 1rem; color: var(--text-muted);">Get fresh updates</p>
                    <div class="newsletter-form" style="display: flex; gap: 0.5rem;">
                        <input type="email" placeholder="Your email" class="form-control" style="font-size: 0.875rem;">
                        <button class="btn btn-primary">Subscribe</button>
                    </div>
                </div>
            </div>
            <div style="border-top: 1px solid var(--border); padding-top: 2rem; text-align: center;" data-aos="fade-up">
                <p style="font-size: 0.875rem; color: var(--text-muted);">&copy; 2023 FreshMarket. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    <!-- AOS (Animate On Scroll) Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 400,
            easing: 'ease-out',
            once: true,
            offset: 50
        });
    </script>
    
    <!-- Vue.js 3 -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script>
        // Simple Vue animation utility object (no mounting needed)
        window.vueAnimations = {
            hoveredButtons: new Set(),
            activeButtons: new Set(),
            setHover: function(buttonId, isHovering) {
                if (isHovering) {
                    this.hoveredButtons.add(buttonId);
                } else {
                    this.hoveredButtons.delete(buttonId);
                }
            },
            setActive: function(buttonId, isActive) {
                if (isActive) {
                    this.activeButtons.add(buttonId);
                    setTimeout(() => {
                        this.activeButtons.delete(buttonId);
                    }, 150);
                } else {
                    this.activeButtons.delete(buttonId);
                }
            },
            isHovered: function(buttonId) {
                return this.hoveredButtons.has(buttonId);
            },
            isActive: function(buttonId) {
                return this.activeButtons.has(buttonId);
            }
        };
    </script>
    
    @RenderSection("scripts", required: false)
    
    <!-- Cart Badge Update Script -->
    <script>
        function updateCartBadge() {
            const cart = JSON.parse(localStorage.getItem("checkedProducts")) || [];
            const badge = document.getElementById("cart-badge");
            if (cart.length > 0) {
                badge.textContent = cart.length;
                badge.style.display = "flex";
            } else {
                badge.style.display = "none";
            }
        }
        
        // Update on page load
        updateCartBadge();
        
        // Listen for storage events (updates from other tabs)
        window.addEventListener('storage', updateCartBadge);
        
        // Listen for custom cart update event
        window.addEventListener('cartUpdated', updateCartBadge);
        
        // Initialize Vue button animations after DOM loads
        function initVueAnimations() {
            if (window.vueAnimations) {
                // Add Vue hover animations to all buttons with data-vue-btn
                document.querySelectorAll('[data-vue-btn]').forEach(btn => {
                    const btnId = btn.getAttribute('data-vue-btn');
                    
                    // Remove existing listeners to avoid duplicates
                    const newBtn = btn.cloneNode(true);
                    btn.parentNode.replaceChild(newBtn, btn);
                    
                    newBtn.addEventListener('mouseenter', function() {
                        window.vueAnimations.setHover(btnId, true);
                        if (this.classList.contains('vue-icon-btn')) {
                            this.classList.add('vue-icon-hover');
                        } else if (this.classList.contains('vue-nav-btn') || this.classList.contains('vue-btn')) {
                            this.classList.add('vue-btn-hover');
                        }
                    });
                    
                    newBtn.addEventListener('mouseleave', function() {
                        window.vueAnimations.setHover(btnId, false);
                        if (this.classList.contains('vue-icon-btn')) {
                            this.classList.remove('vue-icon-hover');
                        } else if (this.classList.contains('vue-nav-btn') || this.classList.contains('vue-btn')) {
                            this.classList.remove('vue-btn-hover');
                        }
                    });
                    
                    newBtn.addEventListener('click', function(e) {
                        window.vueAnimations.setActive(btnId, true);
                        // Add active class temporarily
                        this.classList.add('vue-btn-active');
                        setTimeout(() => {
                            this.classList.remove('vue-btn-active');
                        }, 150);
                    });
                });
                
                // Add Vue focus animations to form inputs
                document.querySelectorAll('.vue-input').forEach(input => {
                    input.addEventListener('focus', function() {
                        this.style.transform = 'translateY(-1px)';
                    });
                    
                    input.addEventListener('blur', function() {
                        this.style.transform = 'translateY(0)';
                    });
                });
            }
        }
        
        // Initialize on DOM ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initVueAnimations);
        } else {
            initVueAnimations();
        }
        
        // Re-initialize for dynamically added elements
        window.initVueAnimations = initVueAnimations;
    </script>
</body>
</html>
