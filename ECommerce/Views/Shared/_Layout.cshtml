<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FreshMarket</title>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <!-- Icons (Phosphor Icons for modern look) -->
    @{ var phosphorUrl = "https://unpkg.com/@phosphor-icons/web"; }
    <script src="@phosphorUrl"></script>
</head>
<body>
    <!-- Modern Navbar -->
    <nav class="navbar">
        <div class="container nav-container">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="nav-logo">
                <i class="ph-fill ph-plant"></i>
                <span>FreshMarket</span>
            </a>

            <!-- Navigation Links -->
            <ul class="nav-links">
                <li><a href="@Url.Action("Index", "Home")" class="nav-link @(ViewBag.Title == "Home Page" ? "active" : "")">Home</a></li>
                <li><a href="@Url.Action("Index", "Home")#products" class="nav-link">Shop</a></li>
                <li><a href="@Url.Action("About", "Home")" class="nav-link">About</a></li>
            </ul>

            <!-- Actions -->
            <div class="nav-actions">
                <a href="#" class="icon-btn">
                    <i class="ph ph-magnifying-glass" style="font-size: 1.25rem;"></i>
                </a>
                
                <a href="@Url.Action("Index", "Cart")" class="icon-btn" style="position: relative;">
                    <i class="ph ph-shopping-cart" style="font-size: 1.25rem;"></i>
                    <span id="cart-badge" class="badge" style="display: none;">0</span>
                </a>

                <a href="@Url.Action("SignIn", "Regis")" class="btn btn-outline" style="font-size: 0.875rem;">Sign In</a>
                <a href="@Url.Action("Register", "Regis")" class="btn btn-primary" style="font-size: 0.875rem;">Register</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content animate-fade-in">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer style="background: var(--bg-alt); border-top: 1px solid var(--border); padding: 3rem 0; margin-top: 4rem;">
        <div class="container">
            <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; margin-bottom: 2rem;">
                <div>
                    <h4 style="margin-bottom: 1rem; color: var(--primary);">FreshMarket</h4>
                    <p style="font-size: 0.875rem; color: var(--text-muted);">Your daily source for fresh, organic produce delivered right to your doorstep.</p>
                </div>
                <div>
                    <h5 style="margin-bottom: 1rem; font-size: 1rem;">Shop</h5>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">Vegetables</a>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">Fruits</a>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">Bundles</a>
                </div>
                <div>
                    <h5 style="margin-bottom: 1rem; font-size: 1rem;">Company</h5>
                    <a href="@Url.Action("About", "Home")" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">About</a>
                    <a href="#" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">Contact</a>
                </div>
                <div>
                    <h5 style="margin-bottom: 1rem; font-size: 1rem;">Newsletter</h5>
                    <p style="font-size: 0.875rem; margin-bottom: 1rem; color: var(--text-muted);">Get fresh updates</p>
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="email" placeholder="Your email" class="form-control" style="font-size: 0.875rem;">
                        <button class="btn btn-primary">Subscribe</button>
                    </div>
                </div>
            </div>
            <div style="border-top: 1px solid var(--border); padding-top: 2rem; text-align: center;">
                <p style="font-size: 0.875rem; color: var(--text-muted);">&copy; 2023 FreshMarket. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <!-- Cart Badge Update Script -->
    <script>
        function updateCartBadge() {
            const cart = JSON.parse(localStorage.getItem("checkedProducts")) || [];
            const badge = document.getElementById("cart-badge");
            if (cart.length > 0) {
                badge.textContent = cart.length;
                badge.style.display = "flex";
            } else {
                badge.style.display = "none";
            }
        }
        
        // Update on page load
        updateCartBadge();
        
        // Listen for storage events (updates from other tabs)
        window.addEventListener('storage', updateCartBadge);
        
        // Listen for custom cart update event
        window.addEventListener('cartUpdated', updateCartBadge);
    </script>
</body>
</html>
