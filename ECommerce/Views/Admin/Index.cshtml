@{
    ViewBag.Title = "Admin Dashboard";
}

<div style="display: flex; gap: 2rem;">
    <!-- Sidebar -->
    <aside style="width: 250px; flex-shrink: 0;">
        <div class="card" style="padding: 1.5rem; position: sticky; top: 100px;">
            <h3 style="font-size: 1.1rem; margin-bottom: 1.5rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.5px;">Menu</h3>
            <ul style="display: flex; flex-direction: column; gap: 0.5rem;">
                <li>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-primary" style="width: 100%; justify-content: start; gap: 0.75rem;">
                        <i class="ph-bold ph-squares-four"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-package"></i> Products
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-shopping-cart"></i> Orders
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-users"></i> Customers
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-chart-line-up"></i> Reports
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <div style="flex: 1; display: flex; flex-direction: column; gap: 2rem;">
        <!-- Header -->
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">Dashboard</h1>
                <p>Welcome back, Admin</p>
            </div>
            <button class="btn btn-primary">
                <i class="ph-bold ph-plus" style="margin-right: 0.5rem;"></i> Add Product
            </button>
        </div>

        <!-- Stats Grid -->
        <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem;">
            <div class="card" style="padding: 1.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="font-size: 0.9rem; margin-bottom: 0.25rem;">Total Sales</p>
                        <h3 id="stat-sales" style="font-size: 1.75rem;">$0.00</h3>
                    </div>
                    <div style="padding: 0.5rem; background: #dcfce7; color: #166534; border-radius: 50%;">
                        <i class="ph-bold ph-currency-dollar"></i>
                    </div>
                </div>
                <span style="color: #166534; font-size: 0.85rem; font-weight: 600;">+12% from last month</span>
            </div>
            
            <div class="card" style="padding: 1.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="font-size: 0.9rem; margin-bottom: 0.25rem;">Total Orders</p>
                        <h3 id="stat-orders" style="font-size: 1.75rem;">0</h3>
                    </div>
                    <div style="padding: 0.5rem; background: #dbeafe; color: #1e40af; border-radius: 50%;">
                        <i class="ph-bold ph-shopping-bag"></i>
                    </div>
                </div>
                <span style="color: #1e40af; font-size: 0.85rem; font-weight: 600;">+5% from last month</span>
            </div>

            <div class="card" style="padding: 1.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="font-size: 0.9rem; margin-bottom: 0.25rem;">Products</p>
                        <h3 id="stat-products" style="font-size: 1.75rem;">0</h3>
                    </div>
                    <div style="padding: 0.5rem; background: #ffedd5; color: #9a3412; border-radius: 50%;">
                        <i class="ph-bold ph-package"></i>
                    </div>
                </div>
                <span style="color: #9a3412; font-size: 0.85rem; font-weight: 600;">+2 new added</span>
            </div>

            <div class="card" style="padding: 1.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                    <div>
                        <p style="font-size: 0.9rem; margin-bottom: 0.25rem;">Customers</p>
                        <h3 style="font-size: 1.75rem;">1,250</h3>
                    </div>
                    <div style="padding: 0.5rem; background: #f3e8ff; color: #6b21a8; border-radius: 50%;">
                        <i class="ph-bold ph-users"></i>
                    </div>
                </div>
                <span style="color: #6b21a8; font-size: 0.85rem; font-weight: 600;">+18% from last month</span>
            </div>
        </div>

        <!-- Recent Orders Table -->
        <div class="card" style="padding: 1.5rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <h3>Recent Orders</h3>
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline" style="font-size: 0.9rem;">View All</a>
            </div>
            
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 1px solid var(--border); text-align: left;">
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Order ID</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Customer</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Date</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Status</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; text-align: right;">Total</th>
                    </tr>
                </thead>
                <tbody id="recent-orders-body">
                    <!-- Injected via JS -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="module">
    // Fetch Products to count
    let res = await fetch("../Content/Data/vegs.json");
    let initialProducts = await res.json();
    let storedProducts = JSON.parse(localStorage.getItem("adminProducts"));
    
    if (!storedProducts || storedProducts.length === 0) {
        storedProducts = initialProducts;
        localStorage.setItem("adminProducts", JSON.stringify(storedProducts));
    }
    
    document.getElementById("stat-products").textContent = storedProducts.length;

    // Fetch Orders
    const orders = JSON.parse(localStorage.getItem("allOrders")) || [];
    document.getElementById("stat-orders").textContent = orders.length;

    // Calculate Sales
    const totalSales = orders.reduce((sum, order) => sum + order.total, 0);
    document.getElementById("stat-sales").textContent = `$${totalSales.toFixed(2)}`;

    // Render Recent Orders (Top 5)
    const tbody = document.getElementById("recent-orders-body");
    const recentOrders = orders.slice(0, 5);

    if (recentOrders.length === 0) {
        tbody.innerHTML = `<tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--text-muted);">No orders found.</td></tr>`;
    } else {
        recentOrders.forEach(order => {
            const tr = document.createElement("tr");
            tr.style.borderBottom = "1px solid var(--border)";
            tr.innerHTML = `
                <td style="padding: 1rem 0; font-weight: 600;">#${order.id}</td>
                <td style="padding: 1rem 0;">
                    <div style="display: flex; align-items: center; gap: 0.75rem;">
                        <div style="width: 32px; height: 32px; background: #e5e7eb; border-radius: 50%;"></div>
                        <span>${order.customer}</span>
                    </div>
                </td>
                <td style="padding: 1rem 0;">${order.date}</td>
                <td style="padding: 1rem 0;">
                    <span style="background: #ffedd5; color: #9a3412; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">${order.status}</span>
                </td>
                <td style="padding: 1rem 0; text-align: right; font-weight: 600;">$${order.total.toFixed(2)}</td>
            `;
            tbody.appendChild(tr);
        });
    }
</script>
