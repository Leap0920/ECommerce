@{
    ViewBag.Title = "Admin Dashboard";
}

<div style="display: flex; gap: 2rem;">
    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")

    <!-- Main Content -->
    <div style="flex: 1; display: flex; flex-direction: column; gap: 2rem;">
        <!-- Header -->
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h1 style="font-size: 2rem; margin-bottom: 0.5rem; background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Dashboard</h1>
                <p style="color: var(--text-muted);">Welcome back, Admin</p>
            </div>
            <a href="@Url.Action("Products", "Admin")?openAddModal=true" class="btn btn-primary">
                <i class="ph-bold ph-plus" style="margin-right: 0.5rem;"></i> Add Product
            </a>
        </div>

            <!-- Stats Grid -->
            <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem;">
                <div class="card" style="padding: 1.5rem; background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); border: 1px solid var(--border); position: relative; overflow: hidden;">
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: var(--gradient-primary);"></div>
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                        <div>
                            <p style="font-size: 0.9rem; margin-bottom: 0.25rem; color: var(--text-muted);">Total Sales</p>
                            <h3 id="stat-sales" style="font-size: 1.75rem; background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">&#8369;0.00</h3>
                        </div>
                        <div style="padding: 0.75rem; background: var(--gradient-light); border-radius: 50%; box-shadow: 0 4px 15px rgba(45, 106, 79, 0.2);">
                            <i class="ph-bold ph-currency-dollar" style="color: var(--primary); font-size: 1.25rem;"></i>
                        </div>
                    </div>
                </div>
                
                <div class="card" style="padding: 1.5rem; background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); border: 1px solid var(--border); position: relative; overflow: hidden;">
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);"></div>
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                        <div>
                            <p style="font-size: 0.9rem; margin-bottom: 0.25rem; color: var(--text-muted);">Total Orders</p>
                            <h3 id="stat-orders" style="font-size: 1.75rem; color: #2563eb;">0</h3>
                        </div>
                        <div style="padding: 0.75rem; background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); border-radius: 50%; box-shadow: 0 4px 15px rgba(37, 99, 235, 0.2);">
                            <i class="ph-bold ph-shopping-bag" style="color: #2563eb; font-size: 1.25rem;"></i>
                        </div>
                    </div>
                </div>

                <div class="card" style="padding: 1.5rem; background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); border: 1px solid var(--border); position: relative; overflow: hidden;">
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);"></div>
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                        <div>
                            <p style="font-size: 0.9rem; margin-bottom: 0.25rem; color: var(--text-muted);">Products</p>
                            <h3 id="stat-products" style="font-size: 1.75rem; color: #d97706;">0</h3>
                        </div>
                        <div style="padding: 0.75rem; background: linear-gradient(135deg, #ffedd5 0%, #fed7aa 100%); border-radius: 50%; box-shadow: 0 4px 15px rgba(217, 119, 6, 0.2);">
                            <i class="ph-bold ph-package" style="color: #d97706; font-size: 1.25rem;"></i>
                        </div>
                    </div>
                </div>

                <div class="card" style="padding: 1.5rem; background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); border: 1px solid var(--border); position: relative; overflow: hidden;">
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);"></div>
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                        <div>
                            <p style="font-size: 0.9rem; margin-bottom: 0.25rem; color: var(--text-muted);">Customers</p>
                            <h3 id="stat-customers" style="font-size: 1.75rem; color: #9333ea;">0</h3>
                        </div>
                        <div style="padding: 0.75rem; background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%); border-radius: 50%; box-shadow: 0 4px 15px rgba(147, 51, 234, 0.2);">
                            <i class="ph-bold ph-users" style="color: #9333ea; font-size: 1.25rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

        <!-- Recent Orders Table -->
        <div class="card" style="padding: 1.5rem; position: relative; overflow: hidden;">
            <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: var(--gradient-primary);"></div>
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <h3 style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Recent Orders</h3>
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline" style="font-size: 0.9rem;">View All</a>
            </div>
            
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 1px solid var(--border); text-align: left;">
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Order ID</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Customer</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Date</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Status</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; text-align: right;">Total</th>
                    </tr>
                </thead>
                <tbody id="recent-orders-body">
                    <tr><td colspan="5" style="text-align: center; padding: 2rem;">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", async function() {
        // Fetch Stats
        try {
            const response = await fetch('/api/orders/stats');
            const result = await response.json();
            
            if (result.success) {
                document.getElementById("stat-orders").textContent = result.data.totalOrders;
                document.getElementById("stat-sales").textContent = `\u20B1${result.data.totalSales.toFixed(2)}`;
            }
        } catch (error) {
            console.error('Error loading stats:', error);
        }

        // Fetch Products Count
        try {
            const response = await fetch('/api/products');
            const result = await response.json();
            
            if (result.success) {
                document.getElementById("stat-products").textContent = result.data.length;
            }
        } catch (error) {
            console.error('Error loading products:', error);
        }
        
        // Fetch Customers Count (Optional, if we have an endpoint, otherwise leave 0 or fetch users)
        try {
            const response = await fetch('/api/users');
            const result = await response.json();
            
            if (result.success) {
                // Filter for customers only if needed, or total users
                document.getElementById("stat-customers").textContent = result.data.length;
            }
        } catch (error) {
            console.error('Error loading users:', error);
        }

        // Fetch Recent Orders
        try {
            const response = await fetch('/api/orders/recent/5');
            const result = await response.json();
            
            const tbody = document.getElementById("recent-orders-body");
            tbody.innerHTML = ''; // Clear loading
            
            if (result.success && result.data.length > 0) {
                result.data.forEach(order => {
                    const date = new Date(order.OrderDate).toLocaleDateString();
                    const tr = document.createElement("tr");
                    tr.style.borderBottom = "1px solid var(--border)";
                    
                    const statusColors = {
                        'Pending': 'background: #fef3c7; color: #92400e;',
                        'Paid': 'background: #dbeafe; color: #1e40af;',
                        'Shipped': 'background: #e0e7ff; color: #4338ca;',
                        'Delivered': 'background: #dcfce7; color: #166534;',
                        'Cancelled': 'background: #fee2e2; color: #991b1b;'
                    };
                    
                    tr.innerHTML = `
                        <td style="padding: 1rem 0; font-weight: 600;">#${order.Id}</td>
                        <td style="padding: 1rem 0;">
                            <div style="display: flex; align-items: center; gap: 0.75rem;">
                                <div style="width: 32px; height: 32px; background: #e5e7eb; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; overflow: hidden;">
                                    ${order.CustomerName.charAt(0)}
                                </div>
                                <span>${order.CustomerName}</span>
                            </div>
                        </td>
                        <td style="padding: 1rem 0;">${date}</td>
                        <td style="padding: 1rem 0;">
                            <span style="${statusColors[order.Status] || ''} padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">${order.Status}</span>
                        </td>
                        <td style="padding: 1rem 0; text-align: right; font-weight: 600;">\u20B1${order.Total.toFixed(2)}</td>
                    `;
                    tbody.appendChild(tr);
                });
            } else {
                tbody.innerHTML = `<tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--text-muted);">No orders found.</td></tr>`;
            }
        } catch (error) {
            console.error('Error loading recent orders:', error);
            document.getElementById("recent-orders-body").innerHTML = `<tr><td colspan="5" style="padding: 2rem; text-align: center; color: var(--text-muted);">Error loading orders.</td></tr>`;
        }
    });
</script>
