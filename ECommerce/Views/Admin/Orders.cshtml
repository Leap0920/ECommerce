@{
    ViewBag.Title = "Manage Orders";
}

<style>
    .admin-layout {
        display: flex;
        gap: 2rem;
        padding-top: 1.5rem;
    }
    
    @@media (max-width: 768px) {
        .admin-layout {
            flex-direction: column;
            gap: 1rem;
            padding-top: 1rem;
        }
    }
</style>

<div class="admin-layout">
    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")

    <!-- Main Content -->
    <div style="flex: 1;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <div>
                <h1 style="font-size: 2rem; margin-bottom: 0.5rem; background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Orders</h1>
                <p style="color: var(--text-muted);">Manage customer orders</p>
            </div>
            <!--
            <div style="display: flex; gap: 1rem;">
                <button class="btn btn-outline">
                    <i class="ph-bold ph-trash" style="margin-right: 0.5rem;"></i> Clear History
                </button>
            </div>
            -->
        </div>

        <div class="card" style="padding: 1.5rem;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 1px solid var(--border); text-align: left;">
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Order ID</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Customer</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Date</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Items</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Status</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; text-align: right;">Total</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; text-align: right;">Action</th>
                    </tr>
                </thead>
                <tbody id="orders-body">
                    <tr><td colspan="7" style="padding: 3rem; text-align: center; color: var(--text-muted);">Loading orders...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    const tbody = document.getElementById("orders-body");

    async function loadOrders() {
        try {
            console.log('[Admin Orders] Loading all orders...');
            const response = await fetch('/api/orders');
            console.log('[Admin Orders] Response status:', response.status);
            const result = await response.json();
            console.log('[Admin Orders] API response:', result);
            
            tbody.innerHTML = "";
            
            if (!result.success || !result.data || result.data.length === 0) {
                console.log('[Admin Orders] No orders found or API error:', result.message);
                tbody.innerHTML = `<tr><td colspan="7" style="padding: 3rem; text-align: center; color: var(--text-muted);">No orders found.</td></tr>`;
                return;
            }

            console.log('[Admin Orders] Found', result.data.length, 'orders');
            result.data.forEach(order => {
                const date = new Date(order.OrderDate).toLocaleDateString();
                const tr = document.createElement("tr");
                tr.style.borderBottom = "1px solid var(--border)";
                
                const statusColors = {
                    'Pending': 'background: #fef3c7; color: #92400e;',
                    'Processing': 'background: #dbeafe; color: #1e40af;',
                    'Shipped': 'background: #e0e7ff; color: #4338ca;',
                    'Delivered': 'background: #dcfce7; color: #166534;',
                    'Cancelled': 'background: #fee2e2; color: #991b1b;'
                };
                
                tr.innerHTML = `
                    <td style="padding: 1rem 0; font-weight: 600;">#${order.Id}</td>
                    <td style="padding: 1rem 0;">
                        <div style="display: flex; align-items: center; gap: 0.75rem;">
                            <div style="width: 32px; height: 32px; background: #e5e7eb; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                ${order.CustomerName.charAt(0)}
                            </div>
                            <span>${order.CustomerName}</span>
                        </div>
                    </td>
                    <td style="padding: 1rem 0;">${date}</td>
                    <td style="padding: 1rem 0;">${order.Items ? order.Items.length : 0} Items</td>
                    <td style="padding: 1rem 0;">
                        <span style="${statusColors[order.Status] || ''} padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">
                            ${order.Status}
                        </span>
                    </td>
                    <td style="padding: 1rem 0; text-align: right; font-weight: 600;">\u20B1${order.Total.toFixed(2)}</td>
                    <td style="padding: 1rem 0; text-align: right;">
                        <select onchange="updateStatus('${order.Id}', this.value)" style="padding: 0.25rem; border-radius: 0.25rem; border: 1px solid var(--border);">
                            <option value="Pending" ${order.Status === 'Pending' ? 'selected' : ''}>Pending</option>
                            <option value="Processing" ${order.Status === 'Processing' ? 'selected' : ''}>Processing</option>
                            <option value="Shipped" ${order.Status === 'Shipped' ? 'selected' : ''}>Shipped</option>
                            <option value="Delivered" ${order.Status === 'Delivered' ? 'selected' : ''}>Delivered</option>
                            <option value="Cancelled" ${order.Status === 'Cancelled' ? 'selected' : ''}>Cancelled</option>
                        </select>
                    </td>
                `;
                tbody.appendChild(tr);
            });
        } catch (error) {
            console.error('[Admin Orders] Error:', error);
            tbody.innerHTML = `<tr><td colspan="7" style="padding: 3rem; text-align: center; color: var(--text-muted);">Error loading orders.</td></tr>`;
        }
    }

    async function updateStatus(orderId, status) {
        try {
            await fetch('/api/orders/status', {
                method: 'POST',
                // Using URLSearchParams for simple parameters binding
                body: new URLSearchParams({ orderId: orderId, status: status })
            });
            // Optionally reload or show notification
            // loadOrders(); 
        } catch (e) {
            alert('Failed to update status');
        }
    }

    document.addEventListener('DOMContentLoaded', loadOrders);
</script>
