@{
    ViewBag.Title = "Manage Products";
}

<div style="display: flex; gap: 2rem;">
    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")

    <!-- Main Content -->
    <div style="flex: 1;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <div>
                <h1 style="font-size: 2rem; margin-bottom: 0.5rem; background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Products</h1>
                <p style="color: var(--text-muted);">Manage your product inventory</p>
            </div>
            <button class="btn btn-primary">
                <i class="ph-bold ph-plus" style="margin-right: 0.5rem;"></i> Add New Product
            </button>
        </div>

        <div class="card" style="padding: 1.5rem;">
            <div style="display: flex; justify-content: space-between; margin-bottom: 1.5rem;">
                <div class="form-group" style="margin: 0; width: 300px;">
                    <div style="position: relative;">
                        <input type="text" class="form-control" placeholder="Search products..." style="padding-left: 2.5rem;">
                        <i class="ph ph-magnifying-glass" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
                    </div>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <select class="form-control" style="width: 150px;">
                        <option>All Categories</option>
                        <option>Vegetables</option>
                        <option>Fruits</option>
                    </select>
                    <select class="form-control" style="width: 150px;">
                        <option>Status</option>
                        <option>Active</option>
                        <option>Draft</option>
                    </select>
                </div>
            </div>

            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 1px solid var(--border); text-align: left;">
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; width: 80px;">Image</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Product Name</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Category</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Price</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Stock</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody id="products-body">
                    <!-- Injected via JS -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Product Modal -->
<div id="product-modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); backdrop-filter: blur(5px); z-index: 1000; align-items: center; justify-content: center;">
    <div class="card" style="width: 500px; padding: 2rem;">
        <h2 id="modal-title" style="margin-bottom: 1.5rem;">Add New Product</h2>
        <form id="product-form">
            <input type="hidden" id="prod-id">
            <div class="form-group">
                <label class="form-label">Product Name</label>
                <input type="text" id="prod-name" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label">Category</label>
                <select id="prod-category" class="form-control">
                    <option value="Vegetables">Vegetables</option>
                    <option value="Fruits">Fruits</option>
                </select>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-group">
                    <label class="form-label">Price ($)</label>
                    <input type="number" id="prod-price" class="form-control" step="0.01" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Image URL</label>
                    <input type="text" id="prod-image" class="form-control" placeholder="/Content/Images/...">
                </div>
            </div>
            <div style="display: flex; gap: 1rem; margin-top: 1rem;">
                <button type="button" class="btn btn-outline" onclick="closeModal()" style="flex: 1;">Cancel</button>
                <button type="submit" class="btn btn-primary" style="flex: 1;">Save Product</button>
            </div>
        </form>
    </div>
</div>

<script type="module">
    // Initialize Products
    let res = await fetch("../Content/Data/vegs.json");
    let initialProducts = await res.json();
    let storedProducts = JSON.parse(localStorage.getItem("adminProducts"));
    
    if (!storedProducts || storedProducts.length === 0) {
        storedProducts = initialProducts;
        localStorage.setItem("adminProducts", JSON.stringify(storedProducts));
    }

    const tbody = document.getElementById("products-body");
    const modal = document.getElementById("product-modal");
    const form = document.getElementById("product-form");

    function renderProducts() {
        tbody.innerHTML = "";
        storedProducts.forEach((prod, index) => {
            const tr = document.createElement("tr");
            tr.style.borderBottom = "1px solid var(--border)";
            tr.innerHTML = `
                <td style="padding: 1rem 0;">
                    <img src="${prod.image}" onerror="this.src='https://placehold.co/50x50'" style="width: 50px; height: 50px; object-fit: contain; border-radius: var(--radius-sm); background: #f9fafb;">
                </td>
                <td style="padding: 1rem 0; font-weight: 600;">${prod.name}</td>
                <td style="padding: 1rem 0;">${prod.type || 'Vegetables'}</td>
                <td style="padding: 1rem 0;">$${prod.price}</td>
                <td style="padding: 1rem 0;">
                    <span style="background: #dcfce7; color: #166534; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">In Stock</span>
                </td>
                <td style="padding: 1rem 0; text-align: right;">
                    <button class="icon-btn" onclick="editProduct(${index})"><i class="ph-bold ph-pencil-simple"></i></button>
                    <button class="icon-btn" onclick="deleteProduct(${index})" style="color: #ef4444;"><i class="ph-bold ph-trash"></i></button>
                </td>
            `;
            tbody.appendChild(tr);
        });
    }

    renderProducts();

    // Modal Functions
    window.openModal = function() {
        modal.style.display = "flex";
        document.getElementById("modal-title").textContent = "Add New Product";
        form.reset();
        document.getElementById("prod-id").value = "";
    };

    window.closeModal = function() {
        modal.style.display = "none";
    };

    window.editProduct = function(index) {
        const prod = storedProducts[index];
        modal.style.display = "flex";
        document.getElementById("modal-title").textContent = "Edit Product";
        document.getElementById("prod-id").value = index;
        document.getElementById("prod-name").value = prod.name;
        document.getElementById("prod-category").value = prod.type || "Vegetables";
        document.getElementById("prod-price").value = prod.price;
        document.getElementById("prod-image").value = prod.image;
    };

    window.deleteProduct = function(index) {
        if(confirm("Are you sure you want to delete this product?")) {
            storedProducts.splice(index, 1);
            localStorage.setItem("adminProducts", JSON.stringify(storedProducts));
            renderProducts();
        }
    };

    // Form Submit
    form.onsubmit = function(e) {
        e.preventDefault();
        const id = document.getElementById("prod-id").value;
        const newProd = {
            name: document.getElementById("prod-name").value,
            type: document.getElementById("prod-category").value,
            price: parseFloat(document.getElementById("prod-price").value),
            image: document.getElementById("prod-image").value || "https://placehold.co/200x200",
            description: "Freshly added product."
        };

        if (id) {
            // Edit
            storedProducts[id] = { ...storedProducts[id], ...newProd };
        } else {
            // Add
            storedProducts.push(newProd);
        }

        localStorage.setItem("adminProducts", JSON.stringify(storedProducts));
        renderProducts();
        closeModal();
    };

    // Attach open modal to the "Add New Product" button
    document.querySelector(".btn-primary").onclick = openModal;
</script>
