@{
    ViewBag.Title = "Manage Products";
}

<div style="display: flex; gap: 2rem;">
    <!-- Sidebar -->
    <aside style="width: 250px; flex-shrink: 0;">
        <div class="card" style="padding: 1.5rem; position: sticky; top: 100px;">
            <h3 style="font-size: 1.1rem; margin-bottom: 1.5rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.5px;">Menu</h3>
            <ul style="display: flex; flex-direction: column; gap: 0.5rem;">
                <li>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-squares-four"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Products", "Admin")" class="btn btn-primary" style="width: 100%; justify-content: start; gap: 0.75rem;">
                        <i class="ph-bold ph-package"></i> Products
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-shopping-cart"></i> Orders
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-outline" style="width: 100%; justify-content: start; gap: 0.75rem; border: none;">
                        <i class="ph-bold ph-users"></i> Customers
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <div style="flex: 1;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <div>
                <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">Products</h1>
                <p>Manage your product inventory</p>
            </div>
            <button class="btn btn-primary">
                <i class="ph-bold ph-plus" style="margin-right: 0.5rem;"></i> Add New Product
            </button>
        </div>

        <div class="card" style="padding: 1.5rem;">
            <div style="display: flex; justify-content: space-between; margin-bottom: 1.5rem;">
                <div class="form-group" style="margin: 0; width: 300px;">
                    <div style="position: relative;">
                        <input type="text" class="form-control" placeholder="Search products..." style="padding-left: 2.5rem;">
                        <i class="ph ph-magnifying-glass" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
                    </div>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <select class="form-control" style="width: 150px;">
                        <option>All Categories</option>
                        <option>Vegetables</option>
                        <option>Fruits</option>
                    </select>
                    <select class="form-control" style="width: 150px;">
                        <option>Status</option>
                        <option>Active</option>
                        <option>Draft</option>
                    </select>
                </div>
            </div>

            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="border-bottom: 1px solid var(--border); text-align: left;">
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; width: 80px;">Image</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Product Name</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Category</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Price</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500;">Stock</th>
                        <th style="padding: 1rem 0; color: var(--text-muted); font-weight: 500; text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="border-bottom: 1px solid var(--border);">
                        <td style="padding: 1rem 0;">
                            <img src="~/Content/Images/Products/bell-pepper.jpg" onerror="this.src='https://placehold.co/50x50'" style="width: 50px; height: 50px; object-fit: contain; border-radius: var(--radius-sm); background: #f9fafb;">
                        </td>
                        <td style="padding: 1rem 0; font-weight: 600;">Bell Pepper</td>
                        <td style="padding: 1rem 0;">Vegetables</td>
                        <td style="padding: 1rem 0;">$4.00</td>
                        <td style="padding: 1rem 0;">
                            <span style="background: #dcfce7; color: #166534; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">In Stock</span>
                        </td>
                        <td style="padding: 1rem 0; text-align: right;">
                            <button class="icon-btn"><i class="ph-bold ph-pencil-simple"></i></button>
                            <button class="icon-btn" style="color: #ef4444;"><i class="ph-bold ph-trash"></i></button>
                        </td>
                    </tr>
                    <tr style="border-bottom: 1px solid var(--border);">
                        <td style="padding: 1rem 0;">
                            <img src="~/Content/Images/Products/carrots.jpg" onerror="this.src='https://placehold.co/50x50'" style="width: 50px; height: 50px; object-fit: contain; border-radius: var(--radius-sm); background: #f9fafb;">
                        </td>
                        <td style="padding: 1rem 0; font-weight: 600;">Carrots</td>
                        <td style="padding: 1rem 0;">Vegetables</td>
                        <td style="padding: 1rem 0;">$2.50</td>
                        <td style="padding: 1rem 0;">
                            <span style="background: #dcfce7; color: #166534; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">In Stock</span>
                        </td>
                        <td style="padding: 1rem 0; text-align: right;">
                            <button class="icon-btn"><i class="ph-bold ph-pencil-simple"></i></button>
                            <button class="icon-btn" style="color: #ef4444;"><i class="ph-bold ph-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 1rem 0;">
                            <img src="~/Content/Images/Products/spinach.jpg" onerror="this.src='https://placehold.co/50x50'" style="width: 50px; height: 50px; object-fit: contain; border-radius: var(--radius-sm); background: #f9fafb;">
                        </td>
                        <td style="padding: 1rem 0; font-weight: 600;">Spinach</td>
                        <td style="padding: 1rem 0;">Vegetables</td>
                        <td style="padding: 1rem 0;">$3.00</td>
                        <td style="padding: 1rem 0;">
                            <span style="background: #fee2e2; color: #991b1b; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.85rem; font-weight: 500;">Low Stock</span>
                        </td>
                        <td style="padding: 1rem 0; text-align: right;">
                            <button class="icon-btn"><i class="ph-bold ph-pencil-simple"></i></button>
                            <button class="icon-btn" style="color: #ef4444;"><i class="ph-bold ph-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
