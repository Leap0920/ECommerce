@{
    ViewBag.Title = "Shopping Cart";
}

<div class="section">
    <h1 style="font-size: 2.5rem; margin-bottom: 2rem;">Shopping Cart</h1>

    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
        <!-- Cart Items -->
        <div class="card" style="padding: 0; overflow: hidden;">
            <div style="padding: 1.5rem; border-bottom: 1px solid var(--border); background: #f9fafb;">
                <div style="display: grid; grid-template-columns: auto 3fr 1fr 1fr 1fr auto; gap: 1rem; font-weight: 600; color: var(--text-muted); font-size: 0.9rem; align-items: center;">
                    <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                        <input type="checkbox" id="select-all-checkbox" onchange="toggleSelectAll(this.checked)" style="width: 18px; height: 18px; accent-color: var(--primary);">
                        <span>All</span>
                    </label>
                    <span>Product</span>
                    <span>Price</span>
                    <span>Quantity</span>
                    <span>Total</span>
                    <span></span>
                </div>
            </div>
            <div id="cart-items-container" style="padding: 1.5rem; display: flex; flex-direction: column; gap: 1.5rem;">
                <!-- Items injected via JS -->
                <div id="empty-cart-msg" style="text-align: center; padding: 3rem; display: none;">
                    <div style="width: 80px; height: 80px; background: #f3f4f6; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: var(--text-muted);">
                        <i class="ph-bold ph-shopping-cart" style="font-size: 2rem;"></i>
                    </div>
                    <h3>Your cart is empty</h3>
                    <p style="margin-bottom: 1.5rem;">Looks like you haven't added anything yet.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Start Shopping</a>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="card" style="padding: 2rem; height: fit-content; position: sticky; top: 100px;">
            <h3 style="margin-bottom: 1.5rem;">Order Summary</h3>
            
            <div id="selected-items-info" style="padding: 0.75rem; background: #f0fdf4; border-radius: 8px; margin-bottom: 1rem; display: none;">
                <span style="color: #166534; font-size: 0.9rem;"><i class="ph ph-check-circle" style="margin-right: 0.25rem;"></i> <span id="selected-count">0</span> item(s) selected for checkout</span>
            </div>
            
            <div style="display: flex; flex-direction: column; gap: 1rem; margin-bottom: 1.5rem;">
                <div style="display: flex; justify-content: space-between;">
                    <span style="color: var(--text-muted);">Subtotal</span>
                    <span id="summary-subtotal" style="font-weight: 600;">&#8369;0.00</span>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <span style="color: var(--text-muted);">Shipping</span>
                    <span style="font-weight: 600; color: var(--primary);">Free</span>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <span style="color: var(--text-muted);">VAT (12%)</span>
                    <span id="summary-tax" style="font-weight: 600;">&#8369;0.00</span>
                </div>
                <div style="height: 1px; background: var(--border); margin: 0.5rem 0;"></div>
                <div style="display: flex; justify-content: space-between; font-size: 1.25rem; font-weight: 700;">
                    <span>Total</span>
                    <span id="summary-total">&#8369;0.00</span>
                </div>
            </div>

            <button id="checkout-btn" onclick="proceedToCheckout()" class="btn btn-primary vue-btn" style="width: 100%; justify-content: center;" data-vue-btn="cart-checkout" disabled>
                Select items to checkout <i class="ph-bold ph-arrow-right" style="margin-left: 0.5rem;"></i>
            </button>
            
            <div style="margin-top: 1.5rem; display: flex; gap: 0.5rem; justify-content: center; color: var(--text-muted);">
                <i class="ph-fill ph-lock-key"></i>
                <span style="font-size: 0.85rem;">Secure Checkout</span>
            </div>
        </div>
    </div>
</div>

<script>
    const cartContainer = document.getElementById('cart-items-container');
    const emptyMsg = document.getElementById('empty-cart-msg');
    let cart = [];
    let currentUserId = null;

    // Get user-specific cart key
    function getCartKey() {
        return currentUserId ? `cart_user_${currentUserId}` : 'cart_guest';
    }

    // Load cart from localStorage based on user
    function loadLocalCart() {
        const key = getCartKey();
        return JSON.parse(localStorage.getItem(key)) || [];
    }

    // Save cart to localStorage based on user
    function saveLocalCart(cartData) {
        const key = getCartKey();
        localStorage.setItem(key, JSON.stringify(cartData));
        // Also update the legacy key for checkout compatibility
        const selectedItems = cartData.filter(item => item.selected);
        localStorage.setItem("checkedProducts", JSON.stringify(selectedItems));
    }

    // Sync with server if logged in
    document.addEventListener('DOMContentLoaded', async () => {
        try {
            // Check if user is logged in
            const authResponse = await fetch('/api/auth/current');
            const authResult = await authResponse.json();
            
            if (authResult.success && authResult.data) {
                currentUserId = authResult.data.id;
            }
            
            // Load cart from server (prioritize server data for logged-in users)
            const response = await fetch('/api/cart');
            const result = await response.json();
            
            if (result.success && result.data && result.data.items && result.data.items.length > 0) {
                // Map server items to local format
                cart = result.data.items.map(item => ({
                    id: item.ProductId,
                    img: item.ProductImage || '',
                    name: item.ProductName,
                    price: item.Price,
                    amount: item.Quantity,
                    totalPrice: item.Price * item.Quantity,
                    type: item.Type || '',
                    selected: true // Default to selected
                }));
                saveLocalCart(cart);
            } else {
                // Fall back to local storage
                cart = loadLocalCart();
            }
            
            renderCart();
        } catch (err) {
            console.log('Error loading cart, using local storage:', err);
            cart = loadLocalCart();
            renderCart();
        }
    });

    function renderCart() {
        // Clear current items (except empty msg)
        Array.from(cartContainer.children).forEach(child => {
            if (child.id !== 'empty-cart-msg') child.remove();
        });

        if (cart.length === 0) {
            emptyMsg.style.display = 'block';
            document.getElementById('summary-subtotal').textContent = '\u20B10.00';
            document.getElementById('summary-tax').textContent = '\u20B10.00';
            document.getElementById('summary-total').textContent = '\u20B10.00';
            document.getElementById('checkout-btn').disabled = true;
            document.getElementById('checkout-btn').textContent = 'Select items to checkout';
            document.getElementById('selected-items-info').style.display = 'none';
            return;
        }

        emptyMsg.style.display = 'none';

        cart.forEach((item, index) => {
            // Ensure numbers
            if (!item.amount) item.amount = 1;
            if (!item.totalPrice) item.totalPrice = item.price * item.amount;
            if (item.selected === undefined) item.selected = true;
            
            const row = document.createElement('div');
            row.style.display = 'grid';
            row.style.gridTemplateColumns = 'auto 3fr 1fr 1fr 1fr auto';
            row.style.gap = '1rem';
            row.style.alignItems = 'center';
            row.style.borderBottom = '1px solid var(--border)';
            row.style.paddingBottom = '1.5rem';
            row.style.opacity = item.selected ? '1' : '0.6';
            row.style.transition = 'opacity 0.2s';
            
            row.innerHTML = `
                <div>
                    <input type="checkbox" class="item-checkbox" data-index="${index}" ${item.selected ? 'checked' : ''} onchange="toggleItemSelection(${index}, this.checked)" style="width: 18px; height: 18px; accent-color: var(--primary); cursor: pointer;">
                </div>
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <img src="${item.img}" style="width: 60px; height: 60px; object-fit: contain; background: #f9fafb; border-radius: var(--radius-sm); padding: 5px;" onerror="this.src='/Content/images/placeholder.jpg'">
                    <div>
                        <h4 style="font-size: 1rem; margin-bottom: 0.25rem;">${item.name}</h4>
                        <span style="font-size: 0.85rem; color: var(--text-muted);">${item.type}</span>
                    </div>
                </div>
                <div style="font-weight: 600;">\u20B1${item.price.toFixed(2)}</div>
                <div style="display: flex; align-items: center; border: 1px solid var(--border); border-radius: var(--radius-sm); width: fit-content;">
                    <button class="icon-btn" onclick="updateQty(${index}, -1)" style="width: 30px; height: 30px; font-size: 0.8rem;">-</button>
                    <span style="width: 30px; text-align: center; font-size: 0.9rem;">${item.amount}</span>
                    <button class="icon-btn" onclick="updateQty(${index}, 1)" style="width: 30px; height: 30px; font-size: 0.8rem;">+</button>
                </div>
                <div style="font-weight: 700; color: var(--primary);">\u20B1${item.totalPrice.toFixed(2)}</div>
                <button class="icon-btn vue-btn" onclick="removeItem(${index})" style="color: #ef4444;" data-vue-btn="cart-remove-${index}">
                    <i class="ph-bold ph-trash"></i>
                </button>
            `;
            
            cartContainer.appendChild(row);
        });

        updateSummary();
        updateSelectAllCheckbox();
    }

    function updateSummary() {
        const selectedItems = cart.filter(item => item.selected);
        let subtotal = selectedItems.reduce((sum, item) => sum + item.totalPrice, 0);
        
        const tax = subtotal * 0.12;
        const total = subtotal + tax;

        document.getElementById('summary-subtotal').textContent = `\u20B1${subtotal.toFixed(2)}`;
        document.getElementById('summary-tax').textContent = `\u20B1${tax.toFixed(2)}`;
        document.getElementById('summary-total').textContent = `\u20B1${total.toFixed(2)}`;
        
        const checkoutBtn = document.getElementById('checkout-btn');
        const selectedInfo = document.getElementById('selected-items-info');
        
        if (selectedItems.length > 0) {
            checkoutBtn.disabled = false;
            checkoutBtn.innerHTML = 'Proceed to Checkout <i class="ph-bold ph-arrow-right" style="margin-left: 0.5rem;"></i>';
            selectedInfo.style.display = 'block';
            document.getElementById('selected-count').textContent = selectedItems.length;
        } else {
            checkoutBtn.disabled = true;
            checkoutBtn.innerHTML = 'Select items to checkout';
            selectedInfo.style.display = 'none';
        }
        
        // Save selected items for checkout
        saveLocalCart(cart);
    }

    function updateSelectAllCheckbox() {
        const selectAllCheckbox = document.getElementById('select-all-checkbox');
        const allSelected = cart.length > 0 && cart.every(item => item.selected);
        const someSelected = cart.some(item => item.selected);
        
        selectAllCheckbox.checked = allSelected;
        selectAllCheckbox.indeterminate = someSelected && !allSelected;
    }

    window.toggleSelectAll = function(checked) {
        cart.forEach(item => item.selected = checked);
        renderCart();
    };

    window.toggleItemSelection = function(index, checked) {
        cart[index].selected = checked;
        saveLocalCart(cart);
        updateSummary();
        updateSelectAllCheckbox();
        
        // Update row opacity
        const rows = cartContainer.querySelectorAll('div[style*="grid-template-columns"]');
        if (rows[index]) {
            rows[index].style.opacity = checked ? '1' : '0.6';
        }
    };

    window.updateQty = function(index, change) {
        if (cart[index].amount + change > 0) {
            cart[index].amount += change;
            cart[index].totalPrice = cart[index].amount * cart[index].price;
            saveLocalCart(cart);
            renderCart();
            
            // Sync with backend
            if (cart[index].id) {
                fetch('/api/cart/update', {
                    method: 'POST',
                    body: new URLSearchParams({
                        productId: cart[index].id,
                        quantity: cart[index].amount
                    })
                }).catch(e => console.log('Sync error:', e));
            }
        }
    };

    window.removeItem = function(index) {
        const itemToRemove = cart[index];
        cart.splice(index, 1);
        saveLocalCart(cart);
        window.dispatchEvent(new Event('cartUpdated'));
        renderCart();
        
        // Sync with backend
        if (itemToRemove.id) {
            fetch('/api/cart/remove', {
                method: 'POST',
                body: new URLSearchParams({ productId: itemToRemove.id })
            }).catch(e => console.log('Sync error:', e));
        }
    };

    window.proceedToCheckout = function() {
        const selectedItems = cart.filter(item => item.selected);
        if (selectedItems.length === 0) {
            alert('Please select at least one item to checkout');
            return;
        }
        // Save only selected items for checkout
        localStorage.setItem("checkedProducts", JSON.stringify(selectedItems));
        window.location.href = '@Url.Action("Checkout", "Cart")';
    };
</script>
