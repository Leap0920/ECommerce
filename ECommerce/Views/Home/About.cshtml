@{
    ViewBag.Title = "About";
}

<div class="section">
    <div class="card" style="padding: 3rem; text-align: center; max-width: 800px; margin: 0 auto;">
        <div style="width: 80px; height: 80px; background: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; color: var(--primary);">
            <i class="ph-fill ph-plant" style="font-size: 3rem;"></i>
        </div>
        
        <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">About FreshMarket</h1>
        <p style="font-size: 1.1rem; color: var(--text-muted); margin-bottom: 2rem; line-height: 1.8;">
            FreshMarket is dedicated to connecting local farmers directly with consumers. We believe in the power of fresh, organic produce to transform health and communities. Our mission is to make high-quality, sustainable food accessible to everyone while supporting the hardworking farmers who grow it.
        </p>

        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; margin-top: 3rem;">
            <div>
                <h3 style="color: var(--primary); font-size: 2rem; margin-bottom: 0.5rem;">100%</h3>
                <p style="font-weight: 600;">Organic</p>
            </div>
            <div>
                <h3 style="color: var(--primary); font-size: 2rem; margin-bottom: 0.5rem;">50+</h3>
                <p style="font-weight: 600;">Local Farmers</p>
            </div>
            <div>
                <h3 style="color: var(--primary); font-size: 2rem; margin-bottom: 0.5rem;">24h</h3>
                <p style="font-weight: 600;">Delivery</p>
            </div>
        </div>
    </div>
</div>
